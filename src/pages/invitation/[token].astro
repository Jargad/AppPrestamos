        <script define:vars={{ loanId: loan.id, token }}>
            const acceptBtn = document.getElementById("accept-btn");
            const rejectBtn = document.getElementById("reject-btn");
            const messageDiv = document.getElementById("message");

            async function handleAction(action) {
                try {
                    const response = await fetch(
                        `/api/loans/${loanId}/${action}`,
                        {
                            method: "POST",
                            headers: { "Content-Type": "application/json" },
                        },
                    );

                    const data = await response.json();

                    if (data.success) {
                        if (messageDiv) {
                            messageDiv.style.display = "block";
                            messageDiv.style.background =
                                "rgba(34, 197, 94, 0.1)";
                            messageDiv.style.border =
                                "1px solid rgba(34, 197, 94, 0.3)";
                            messageDiv.style.color = "#22c55e";
                            messageDiv.style.padding = "1rem";
                            messageDiv.style.borderRadius = "8px";
                            messageDiv.textContent =
                                action === "accept"
                                    ? "‚úÖ Pr√©stamo aceptado exitosamente"
                                    : "‚ùå Pr√©stamo rechazado";
                        }

                        // Redirect to home after 2 seconds
                        setTimeout(() => {
                            window.location.href = "/";
                        }, 2000);
                    } else {
                        throw new Error(data.error);
                    }
                } catch (error) {
                    if (messageDiv) {
                        messageDiv.style.display = "block";
                        messageDiv.style.background = "rgba(239, 68, 68, 0.1)";
                        messageDiv.style.border =
                            "1px solid rgba(239, 68, 68, 0.3)";
                        messageDiv.style.color = "#ef4444";
                        messageDiv.style.padding = "1rem";
                        messageDiv.style.borderRadius = "8px";
                        messageDiv.textContent =
                            error.message || "Error al procesar la solicitud";
                    }
                }
            }

            acceptBtn?.addEventListener("click", () => handleAction("accept"));
            rejectBtn?.addEventListener("click", () => handleAction("reject"));
        </script>

